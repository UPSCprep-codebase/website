{{!< default}}

<main class="main-content">

  <div class="post-header tc">

    <div class="container">

      {{#author}}
      
      {{#if profile_image}}
      <img src="{{profile_image}}" class="avatar" alt="{{name}}">
      {{/if}}

      <h1 class="lhtitle font-heading mb1 mt0 fs36">{{name}}</h1>

      {{#if bio}}<p class="fs20 mb2">{{bio}}</p>{{/if}}

      <div class="author-links">
        {{#if website}}
        <a href="{{website}}" target="_blank" class="dib mb1 nolink" title="{{t 'Website'}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><path d="M15 1H1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM6 3h2v2H6V3zM2 3h2v2H2V3zm12 10H2V7h12v6zm0-8h-4V3h4v2z" fill="var(--color-grey)"/></svg></a>
        {{/if}}
        {{#if twitter}}
        <a href="{{twitter_url}}" target="_blank" class="dib mb1 nolink" title="{{twitter}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><path d="M16 3c-.6.3-1.2.4-1.9.5.7-.4 1.2-1 1.4-1.8-.6.4-1.3.6-2.1.8-.6-.6-1.5-1-2.4-1-1.7 0-3.2 1.5-3.2 3.3 0 .3 0 .5.1.7-2.7-.1-5.2-1.4-6.8-3.4-.3.5-.4 1-.4 1.7 0 1.1.6 2.1 1.5 2.7-.5 0-1-.2-1.5-.4C.7 7.7 1.8 9 3.3 9.3c-.3.1-.6.1-.9.1-.2 0-.4 0-.6-.1.4 1.3 1.6 2.3 3.1 2.3-1.1.9-2.5 1.4-4.1 1.4H0c1.5.9 3.2 1.5 5 1.5 6 0 9.3-5 9.3-9.3v-.4C15 4.3 15.6 3.7 16 3z" fill="#1da1f2"/></svg></a>
        {{/if}}
        {{#if facebook}}
        <a href="{{facebook_url}}" target="_blank" class="dib mb1 nolink" title="{{facebook}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16"><path d="M16 8.048a8 8 0 1 0-9.25 7.9V10.36H4.719V8.048H6.75V6.285a2.822 2.822 0 0 1 3.021-3.112 12.2 12.2 0 0 1 1.791.156V5.3h-1.008a1.155 1.155 0 0 0-1.3 1.25v1.5h2.219l-.355 2.312H9.25v5.591A8 8 0 0 0 16 8.048Z" fill="#4267B2"/></svg></a>
        {{/if}}
      </div>
      <p class="fs18 color-grey">{{plural count.posts empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}</p>

      {{/author}}
      
      <hr class="line line--center">

    </div>

  </div>

  <div class="container post-content centered mt4">
    {{#foreach posts limit="all"}}
      {{> article-link}}
    {{/foreach}}
  </div>

</div>