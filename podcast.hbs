{{!< default}}

{{#contentFor "head_scripts"}}
<style>
  .hero__content img { height: 40px; width: auto; }
</style>
{{/contentFor}}

<div class="post-header">
{{#page}}
  
  <div class="container main-content">

    <div class="home__hero mb2">

      <div class="home__intro mt2">

        <h1 class="lhtitle mb1 mt2 fs36">{{title}}</h1>

        <div class="fs20 mb3 hero__content">
          {{content}}
        </div>

      </div>

      <div class="home__video">

        {{#if @custom.podcast_page_youtube_id}}
        <lite-youtube videoid="{{@custom.podcast_page_youtube_id}}"></lite-youtube>
        {{else}}
          {{#if feature_image}}
          <img src="{{img_url feature_image size="m"}}" alt="{{title}}" />
          {{/if}}
        {{/if}}

      </div>

    </div>

  </div>
  
{{/page}}
</div>

  <div class="container">
    <div class="mt4">

      <div class="episodes">
        {{#foreach posts}}
          <a href="{{url}}" title="{{title}}" class="nolink color-text episode mb4">
            <img src="{{img_url feature_image size="m"}}" alt="{{title}}">
            <h2 class="mt1">{{title}}</h2>
          </a>
        {{/foreach}}
      </div>

      <div class="mt3 fs16">
      {{pagination}}
      </div>


    </div>
  </div>

</div>