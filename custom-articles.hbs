{{!< default}}

<div class="main-content">

  {{#post}}
  <article class="{{post_class}}">

    <div class="post-header tc">

      <div class="container">

        {{#if feature_image}}
        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="post-image" />
        {{/if}}

        <h1 class="lhtitle font-heading mb1 mt0 fs36">{{title}}</h1>

        {{#if custom_excerpt}}
        <h2 class="fs24 normal mb2">{{custom_excerpt}}</h2>
        {{/if}}

        <hr class="line line--center">

      </div>

    </div>

    <div class="container">
      <div class="topics">

        {{> topic-list}}

      </div>

      <div class="container container--narrow mt4">
        <h2 class="normal">{{t "All Articles"}}</h2>

        {{#get "posts" limit="50"}}
          {{#foreach posts}}
          <div class="article-link">
            <div class="article-link__date">
              {{date format="MMM DD"}}
            </div>
            <a href="{{url}}" title="{{title}}" class="nolink">{{title}}</a>
          </div>
          {{/foreach}}
        {{/get}}

      </div>
    </div>

  </article>
  {{/post}}

</div>


{{#contentFor "scripts"}}
  {{> post-js}}
{{/contentFor}}